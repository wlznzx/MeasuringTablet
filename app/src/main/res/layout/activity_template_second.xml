<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/inventory_template"
        android:textSize="28sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/baseColor" />
    <!-- 页眉 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/page_header"
            android:textSize="22sp"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/left_header_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/left_header"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/mid_header_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/mid_header"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/right_header_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/right_header"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- 页脚 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/page_footer"
            android:textSize="22sp"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/left_footer_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/left_header"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/mid_footer_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/mid_header"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/right_footer_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/right_header"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/septal_lines_margin"
        android:layout_marginRight="@dimen/septal_lines_margin"
        android:background="@color/baseColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/title_name_"
            android:textSize="22sp"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"
            android:textColorHint="@color/colorPrimary"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/title_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/page"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="@string/title_name"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/septal_lines_margin"
        android:layout_marginRight="@dimen/septal_lines_margin"
        android:background="@color/baseColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/sign_part"
            android:textSize="22sp"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sign_rv"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/title_part"
            android:textSize="22sp"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/title_p_rv"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_margin"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

