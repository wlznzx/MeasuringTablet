<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:gravity="center_vertical"
    android:background="@drawable/textview_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/m_id_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:text="M1" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <TextView
        android:id="@+id/m_info_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_2part_width"
        android:layout_height="match_parent"
        android:text="M1" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- Max -->
    <TextView
        android:id="@+id/m_max_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:text="" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- Min -->
    <TextView
        android:id="@+id/m_min_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:text="" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- Judge -->
    <TextView
        android:id="@+id/m_judge_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:text="" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- 1号工件 -->
    <EditText
        android:id="@+id/m_workspace1_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:hint="@string/measure_value" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <ImageView
        android:id="@+id/m_workspace1_iv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:src="@drawable/add_circle"
        android:padding="2dp"
        android:scaleType="centerInside"/>
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- 2号工件 -->
    <EditText
        android:id="@+id/m_workspace2_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:hint="@string/measure_value" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <ImageView
        android:id="@+id/m_workspace2_iv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:src="@drawable/add_circle"
        android:padding="2dp"
        android:scaleType="centerInside"/>
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- 3号工件 -->
    <EditText
        android:id="@+id/m_workspace3_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:hint="@string/measure_value" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <ImageView
        android:id="@+id/m_workspace3_iv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:src="@drawable/add_circle"
        android:padding="2dp"
        android:scaleType="centerInside"/>
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- 4号工件 -->
    <EditText
        android:id="@+id/m_workspace4_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:hint="@string/measure_value" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <ImageView
        android:id="@+id/m_workspace4_iv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:src="@drawable/add_circle"
        android:padding="2dp"
        android:scaleType="centerInside"/>
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <!-- 5号工件 -->
    <EditText
        android:id="@+id/m_workspace5_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:hint="@string/measure_value" />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

    <ImageView
        android:id="@+id/m_workspace5_iv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="@dimen/m_part_width"
        android:layout_height="match_parent"
        android:src="@drawable/add_circle"
        android:padding="2dp"
        android:scaleType="centerInside"/>
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:src="@android:color/black"
        />

</LinearLayout>